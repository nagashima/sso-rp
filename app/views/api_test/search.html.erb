<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="mb-6">
      <h1 class="text-2xl font-bold mb-2">ユーザー検索 (GET /users)</h1>
      <%= link_to '← API検証メニューに戻る', api_test_path, class: "text-blue-600 hover:underline" %>
    </div>

    <div class="bg-white rounded-lg shadow-md p-6">
      <%= form_with url: api_test_search_path, method: :post, local: true do |f| %>
        <div class="space-y-3 mb-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">IDs（カンマ区切り）:</label>
            <%= text_field_tag :ids, params[:ids],
                class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm",
                placeholder: "1,2,3" %>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">氏名（漢字）:</label>
            <%= text_field_tag :name, params[:name],
                class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm",
                placeholder: "山田" %>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">氏名（かな）:</label>
            <%= text_field_tag :kana_name, params[:kana_name],
                class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm",
                placeholder: "やまだ" %>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">電話番号:</label>
            <%= text_field_tag :phone_number, params[:phone_number],
                class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm",
                placeholder: "09012345678" %>
          </div>

          <div class="grid grid-cols-2 gap-3">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Limit:</label>
              <%= text_field_tag :limit, params[:limit],
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm",
                  placeholder: "100" %>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Offset:</label>
              <%= text_field_tag :offset, params[:offset],
                  class: "w-full px-3 py-2 border border-gray-300 rounded-md text-sm",
                  placeholder: "0" %>
            </div>
          </div>
        </div>

        <%= f.submit '検索', class: "w-full bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded-md cursor-pointer" %>
      <% end %>

      <% if @request_url %>
        <div class="mt-6 border-t pt-4">
          <h3 class="font-semibold mb-2">▼ リクエスト情報</h3>
          <div class="bg-gray-50 p-3 rounded text-sm break-all">
            <p><strong>URL:</strong> <%= @request_url %></p>
            <p><strong>Auth:</strong> Basic (CLIENT_ID: <%= @client_id&.slice(0, 20) %>...)</p>
          </div>
        </div>

        <div class="mt-4">
          <h3 class="font-semibold mb-2">▼ レスポンス</h3>
          <% if @error %>
            <div class="bg-red-50 border border-red-200 p-3 rounded text-red-800">
              <%= @error %>
            </div>
          <% else %>
            <p class="mb-2">
              <span class="font-semibold">Status:</span>
              <span class="<%= @status_code.to_i == 200 ? 'text-green-600' : 'text-red-600' %>">
                <%= @status_code %> <%= @status_code.to_i == 200 ? 'OK' : 'Error' %>
              </span>
            </p>
            <pre class="bg-gray-900 text-gray-100 p-4 rounded overflow-x-auto text-sm"><%= @response_body %></pre>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
