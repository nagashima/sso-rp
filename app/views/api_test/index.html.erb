<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="mb-6">
      <h1 class="text-3xl font-bold mb-2">IdP API検証ツール</h1>
      <%= link_to 'トップに戻る', root_path, class: "text-blue-600 hover:underline" %>
    </div>

    <div class="space-y-4">
      <!-- ユーザー情報取得 -->
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition">
        <%= link_to api_test_user_path, class: "block" do %>
          <h2 class="text-xl font-bold mb-2">■ ユーザー情報取得</h2>
          <p class="text-gray-600 text-sm">GET /api/v1/users/:id</p>
          <p class="text-gray-500 text-sm mt-2">ユーザーIDを指定して情報を取得</p>
        <% end %>
      </div>

      <!-- ユーザー検索 -->
      <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition">
        <%= link_to api_test_search_path, class: "block" do %>
          <h2 class="text-xl font-bold mb-2">■ ユーザー検索</h2>
          <p class="text-gray-600 text-sm">GET /api/v1/users</p>
          <p class="text-gray-500 text-sm mt-2">氏名・かな・電話番号・IDsで検索</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
